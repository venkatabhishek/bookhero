html
    head
        title Profile
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.1/css/all.css", integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf", crossorigin="anonymous")
        link(rel="stylesheet", href="/profile.css")
        link(rel="stylesheet", href="https://js.arcgis.com/4.11/esri/css/main.css")
        script(src="https://js.arcgis.com/4.11/")
        script.
            require([
            "esri/Map",
            "esri/views/MapView"
            ], function(Map, MapView) {

            var map = new Map({
                basemap: "topo-vector"
            });

            var view = new MapView({
                container: "mapContainer",
                map: map,
                center: [-77.010592, 38.880725],
                zoom: 11
            });

            });
    body
        div.navbar
            div.logo 
                a(href="/app") Book Hero
            div.search-bar
                i.fas.fa-search
                input.search(type="text", placeholder="Search...")
            ul
                li
                    a(href="/app/add") Add Book
                li
                    a(href="/app/profile") Profile
        hr
        div.wrapper
            div.left
                img(src="https://ui-avatars.com/api/?name="+user.email+"&size=256", alt="")
                h3.name= user.email
            div.right
                form(action="/api/users/location", method="post")
                    div.location
                        h1 Location
                        h3 Choose the location from which your library will be located
                        div#mapContainer
                        h3 Or input latitude, longitude  coordinates
                        input(type="text", value=user.location.coordinates[0], name="longitude", style="display:inline;", placeholder="longitude")
                        input(type="text", value=user.location.coordinates[1], name="latitude", style="display:inline;", placeholder="latitude")
                        br
                        button.location-btn(type="submit") Save
        